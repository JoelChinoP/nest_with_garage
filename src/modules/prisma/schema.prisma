// Looking for ways to speed up your queries, or scale easily with your serverless or edge functions?
// Try Prisma Accelerate: https://pris.ly/cli/accelerate-init

// Define generators to specify which tools to generate from your schema.
generator client {
  provider        = "prisma-client" // prisma-client-js
  output          = "./generated/client"
  previewFeatures = ["relationJoins"]
  /**
   * moduleFormat    = "esm" // or `"cjs"` for CommonJS
   */
  engineType      = "client" // no Rust engine
}

// Generate a markdown ERD (Entity Relationship Diagram) from your schema.
generator markdown {
  provider = "prisma-markdown"
  output   = "./generated/docs/entity-relationship-diagram.md"
  title    = "Cross - Entity Relationship Diagram"
}

datasource db {
  provider = "mysql"
}

